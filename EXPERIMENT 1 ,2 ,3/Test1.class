class player
{
String name;
int age;
string core;

player(String n,int a,string core)
{ name=n; age=a; this.core = core}

void show()
{

System.out.println("Player name : "+name);
System.out.println("Age : "+age);
System.out.println("Special : "+core);
}
}



class criket_player extends player
{
String type;
criket_player(String n,String t,int a)
{
super(n,a,core);
type=t;
}
public void show()
{
super.show();
System.out.println("Player type : "+type);
}
}



